@model VirtualDoormanAspNet.Models.ViewModels.ViewModelApartmentPeople

@{
    ViewData["Title"] = "Dados do morador";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <form asp-action="Create">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="People.Name" class="control-label"></label>
                <input asp-for="People.Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="People.Email" class="control-label"></label>
                <input asp-for="People.Email" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="People.Rg" class="control-label"></label>
                <input asp-for="People.Rg" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="People.Cpf" class="control-label"></label>
                <input asp-for="People.Cpf" class="form-control" />
            </div>
        </div>
        <div class="col-md-12"></div>
        <div class="col-md-1">
            <div class="form-group">
                <label asp-for="People.PhoneDdd" class="control-label"></label>
                <input asp-for="People.PhoneDdd" class="form-control" />
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="People.PhoneNumber" class="control-label"></label>
                <input asp-for="People.PhoneNumber" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="People.ApartmentNumber" class="control-label"></label>
                <select asp-for="People.ApartmentNumber" asp-items="@(new SelectList(Model.Apartments, "ApartmentNumber", "ApartmentNumber"))" class="form-control">
                </select>
            </div>
        </div>
        <div class="col-md-12">
            <input type="submit" value="Adicionar" class ="btn btn-primary" />
            <a asp-action="Index" class="btn btn-info">Cancelar</a>
        </div>
    </form>
</div>