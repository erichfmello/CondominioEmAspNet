@model VirtualDoormanAspNet.Models.People

@{
    ViewData["Title"] = "Dados do morador";
}

<h2>@ViewData["Title"]</h2>

<hr />

<div class="row">
    <form asp-action="Create">
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Rg" class="control-label"></label>
                <input asp-for="Rg" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Cpf" class="control-label"></label>
                <input asp-for="Cpf" class="form-control" />
            </div>
        </div>
        <div class="col-md-12"></div>
        <div class="col-md-1">
            <div class="form-group">
                <label asp-for="PhoneDdd" class="control-label"></label>
                <input asp-for="PhoneDdd" class="form-control" />
            </div>
        </div>
        <div class="col-md-5">
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
            </div>
        </div>
    </form>
</div>