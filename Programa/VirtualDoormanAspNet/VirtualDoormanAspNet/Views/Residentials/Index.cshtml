@model VirtualDoormanAspNet.Models.ViewModels.ViewModelResidentialDataAddress
@{
    ViewData["Title"] = "Dados Residenciais";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <form asp-action="Create">
        <div class="col-md-10">
            <div class="form-group">
                <label asp-for="ResidentialData.Name" class="control-label"></label>
                <input asp-for="ResidentialData.Name" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ResidentialAddress.Address" class="control-label"></label>
                <input asp-for="ResidentialAddress.Address" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ResidentialAddress.Neighborhood" class="control-label"></label>
                <input asp-for="ResidentialAddress.Neighborhood" class="form-control">
            </div>
        </div>

        <div class="col-md-2">
            <div class="form-group">
                <label asp-for="ResidentialAddress.Number" class="control-label"></label>
                <input asp-for="ResidentialAddress.Number" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ResidentialAddress.Cep" class="control-label"></label>
                <input asp-for="ResidentialAddress.Cep" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ResidentialAddress.Uf" class="control-label"></label>
                <select asp-for="ResidentialAddress.Uf" class="form-control" id="select">
                    <option>AC</option>
                    <option>AL</option>
                    <option>AM</option>
                    <option>AP</option>
                    <option>BA</option>
                    <option>CE</option>
                    <option>DF</option>
                    <option>ES</option>
                    <option>GO</option>
                    <option>MA</option>
                    <option>MG</option>
                    <option>MS</option>
                    <option>MT</option>
                    <option>PA</option>
                    <option>PB</option>
                    <option>PE</option>
                    <option>PI</option>
                    <option>PR</option>
                    <option>RJ</option>
                    <option>RN</option>
                    <option>RO</option>
                    <option>RR</option>
                    <option>RS</option>
                    <option>SC</option>
                    <option>SE</option>
                    <option>SP</option>
                    <option>TO</option>
                </select>
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <label asp-for="ResidentialData.Cnpj" class="control-label"></label>
                <input asp-for="ResidentialData.Cnpj" class="form-control">
            </div>
        </div>
        <br />
        <br />
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="ResidentialData.ApartmentLastFloor" class="control-label"></label>
                <input asp-for="ResidentialData.ApartmentLastFloor" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ResidentialData.Floor" class="control-label"></label>
                <input asp-for="ResidentialData.Floor" class="form-control">
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label asp-for="ResidentialData.ApartmentPerFloor" class="control-label"></label>
                <input asp-for="ResidentialData.ApartmentPerFloor" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="ResidentialData.NumberBlock" class="control-label"></label>
                <input asp-for="ResidentialData.NumberBlock" class="form-control">
            </div>
        </div>
        <div class="col-md-12">
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-area="" asp-controller="Home" asp-action="Index" class="btn btn-info">Cancelar</a>
            </div>
        </div>
    </form>
</div>